{% extends 'baseLogin.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">
        <div class="card mx-auto col-4 login">
            <div class="card-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Você está logado como {{ app.user.nome }}, <a href="{{ path('app_logout') }}" class="btn btn-danger">SAIR</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Faça seu Login</h1>
                    
                    <div class="form-group">
                        <label for="inputUsername">CPF</label>
                        <input type="text" value="{{ last_username }}" name="cpf" id="inputUsername" class="form-control" autocomplete="cpf" maxlength="11" minlength="11" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="inputData">Data de Nascimento</label>
                        <input type="text" name="nascimento" id="inputData" class="form-control" autocomplete="current-password" maxlength="8" minlength="8" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-lg btn-success m-2" type="submit">Entrar</button>
                        
                    </div>
                </form>
            </div>
        </div>    
    </div>
{% endblock %}
