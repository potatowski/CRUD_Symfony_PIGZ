{% extends 'baseLogin.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div id="login">
        <div class="card" style="width: 18rem;">
        <div class="card-body">
            <form action="">
                <div class="form-group">
                    <label>CPF</label>
                    <input type="text" class="form-control" placeholder="Insira seu CPF" pattern="[0-9]+" maxlength="11" minlength="11" required>
                </div>
                <div class="form-group">
                    <label>Data de Nascimento</label>
                    <input type="text" class="form-control" placeholder="Insira sua Data de Nascimento" pattern="[0-9]+" maxlength="8" minlength="8" required>
                </div>
                <button type="submit" class="btn btn-outline-primary m-2 btn-block">Entrar</button>
            </form>
        </div>
        </div>
    </div>
{% endblock %}
