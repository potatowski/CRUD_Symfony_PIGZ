{% extends 'baseLogin.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">
        <div class="card mx-auto col-4 login">
            <div class="card-body">
                <form method="POST">
                    <div class="form-group">
                        <label>CPF</label>
                        <input type="text" name="cpf" class="form-control" placeholder="Insira seu CPF" pattern="[0-9]+" maxlength="11" minlength="11" required>
                    </div>
                    <div class="form-group">
                        <label>Data de Nascimento</label>
                        <input type="text" name="data" class="form-control" placeholder="Insira sua Data de Nascimento" pattern="[0-9]+" maxlength="8" minlength="8" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success m-2">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
