{% extends 'base.html.twig' %}

{% block title %}Cliente index{% endblock %}

{% block body %}
    <h1>Lista de Clientes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>Mostrar</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td>{{ cliente.id }}</th>
                <td>{{ cliente.nome }}</th>
                <td>{{ cliente.cpf }}</th>
                <td>{{ cliente.nascimento ? cliente.nascimento|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('cliente_show', {'id': cliente.id}) }}">MOSTRAR</a>
                </td>
                <td>
                    <a href="{{ path('cliente_edit', {'id': cliente.id}) }}">EDITAR</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">SEM DADOS CADASTRADOS</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cliente_new') }}">ADICIONAR CLIENTE</a>
{% endblock %}
